import { createClient } from '@libsql/client';

const client = createClient({
  url: process.env.DATABASE_URL,
  authToken: process.env.TURSO_AUTH_TOKEN,
});

export default client;

model Book {
  id          String     @id @default(cuid())
  title       String
  author      String
  genre       String?
  year        Int
  pages       Int
  rating      Float
  synopsis    String
  cover       String?
  status      BookStatus @default(QUERO_LER)
  currentPage Int        @default(0)
  isbn        String?
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("books")
}

model Genre {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("genres")
}

enum BookStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}