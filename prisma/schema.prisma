// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id        String   @id @default(cuid())
  title     String
  author    String
  genre     String
  year      Int
  pages     Int
  rating    Float
  synopsis  String
  cover     String
  status    BookStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("books")
}

enum BookStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}
